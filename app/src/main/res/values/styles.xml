<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Main homepage default Theme -->
        <item name="backgroundColor">#EEEEEE</item>
        <item name="card_background">#FFFFFF</item>
        <item name="Text_Color">#000000</item>
        <item name="Button_Color">#0288D1</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    <!-- Dark application theme. -->

    </style>
         <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Main homepage default Theme DarkTheme on Switch click -->
        <item name="backgroundColor">#000000</item>
        <item name="card_background">#37474F</item>
        <item name="Text_Color">#FFFFFFFF</item>
        <item name="Button_Color">#37474F</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        </style>

    <!--This is use for Smooth reset activitty on switch click off -->

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_in</item>
    </style>

</resources>
